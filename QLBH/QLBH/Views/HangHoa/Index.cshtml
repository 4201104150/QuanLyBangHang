@model IEnumerable<QLBH.MyModels.HangHoaViewModel>

@{
    ViewData["Title"] = "Danh sách";
    Layout = "~/Views/Shared/_LayoutTongQuat.cshtml";
}
<style>
    .hanghoa {
        height: 250px;
        border-radius: 5px;
        text-align: center;
        position: relative;
    }

        .hanghoa:hover {
            border: 1px solid blue;
        }

        .hanghoa img {
            height: 150px;
        }

    .giaban {
        position: absolute;
        bottom: 5px;
        right: 5px;
        font-size: large;
        color: blue;
    }
</style>
<div class="row">
    @foreach (var hh in Model)
    {
        <div class="col-md-3 hanghoa">
            <a asp-action="ChiTiet" asp-controller="HangHoa"
               asp-route-mahh="@hh.MaHH">
                <img src="~/Hinh/HangHoa/@hh.Hinh" />
            </a>
            <h3>@hh.TenHH</h3>
            <div class="giaban">Giá bán: @hh.GiaBan đ</div>
        </div>
    }
</div>