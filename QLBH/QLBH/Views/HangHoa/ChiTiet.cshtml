@model QLBH.Models.HangHoa
@{
    ViewData["Title"] ="Chi tiết";
    Layout = "~/Views/Shared/_LayoutTongQuat.cshtml";
}
    <div class="agileinfo_single">
        <div class="col-md-4 agileinfo_single_left">
            <img id="" src="~/Hinh/HangHoa/@Model.Hinh" class="img-responsive">
        </div>
        <div class="col-md-8 agileinfo_single_right">
            <h2>@Model.TenHh</h2>
            <div class="rating1">
                <span class="starRating">
                    <input id="rating5" type="radio" name="rating" value="5">
                    <label for="rating5">5</label>
                    <input id="rating4" type="radio" name="rating" value="4">
                    <label for="rating4">4</label>
                    <input id="rating3" type="radio" name="rating" value="3" checked="">
                    <label for="rating3">3</label>
                    <input id="rating2" type="radio" name="rating" value="2">
                    <label for="rating2">2</label>
                    <input id="rating1" type="radio" name="rating" value="1">
                    <label for="rating1">1</label>
                </span>
            </div>
            <div class="w3agile_description">
                <h4>Thông tin Sản phẩm :</h4>
                <p>Loại: @ViewBag.loaidangchon</p>
                <p>Mô tả: @Model.MoTa</p>
            </div>
            <div class="snipcart-item block">
                <div class="snipcart-thumb agileinfo_single_right_snipcart">
                    <h4 class="m-sing">
                        @Html.FormatValue(Model.DonGia * (1 - Model.GiamGia), "{0:#,##0} đ")
                        @if (Model.GiamGia > 0)
                        {
                            <span>@Model.DonGia.ToString() đ</span>
                        }
                    </h4>
                </div>
                <div class="snipcart-details agileinfo_single_right_details">
                    <form asp-controller="CartItem" asp-action="AddToCart" asp-route-mahh="@Model.MaHh" method="post">
                        <div class="cart-plus-minus">
                            <label for="qty">Số lượng:</label>
                            <div class="numbers-row">
                                <div onClick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 0 ) result.value--;return false;" class="dec qtybutton"><i class="fa fa-minus">&nbsp;</i></div>
                                <input type="text" class="qty" title="Qty" value="1" maxlength="12" id="qty" name="qty">
                                @*<input class="d-none" value="@Model.MaHh" name="productId" />*@
                                <div onClick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="inc qtybutton"><i class="fa fa-plus">&nbsp;</i></div>
                            </div>
                        </div>
                        <input type="submit" name="submit" value="Đặt hàng" class="button">
                    </form>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
        <div class="a2a_kit a2a_kit_size_32 a2a_default_style" data-a2a-url="https://127.0.0.1:5001/HangHoa/ChiTiet?mahh=@ViewBag.IDD" data-a2a-title="Chi tiết">
            <a class="a2a_button_facebook"></a>
            <a class="a2a_button_email"></a>
        </div>
        <script>
            var a2a_config = a2a_config || {};
            a2a_config.locale = "vi";
        </script>
        <script async src="https://static.addtoany.com/menu/page.js"></script>
    </div>

@section breadcrumbs{
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li><a asp-controller="Home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang chủ</a></li>
                <li>@ViewBag.loaidangchon</li>
                <li class="active">@Model.TenHh</li>
            </ol>
        </div>
    </div>
}